<nav class="app-nav{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  
  <ul class="app-nav__list">

    {%- for item in params.items %}
      <li class="app-nav__list-item{% if item.selected %} app-nav__list-item--selected{% endif %}">
        <a href="{{ item.href }}"{% if item.selected %} aria-current="page"{% endif %}>{{ item.html | safe if item.html else item.text }}</a>
      </li>
    {% endfor -%}

  </ul>

</nav>
